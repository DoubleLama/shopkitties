<div class="m-5">
  <div class="container mt-5 mb-5 form-group">

      <div class= "bg-light container fieldset mt-3 mr3 pt-3 fieldset col-lg-4 ">
        <%= render "devise/shared/error_messages", resource: resource %>
          <h1 class="text-center">Modifier vos identifiants</h1>
          <p class="border-bottom">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

               <h5 class="text-center">Vous souhaitez changer d'adresse email ?</h5>

              <div class="field">
                <br>

                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'Email form-control' %>
              </div>

              <br>

              <hr>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <br>

              <div class="field">
                <h5 class="text-center">Vous souhaitez changer de mot de passe ?</h5>
                <%= f.password_field :current_password, autocomplete: "current-password", placeholder: 'Mot de passe actuel', class: "form-control" %>
              </div>

              <br>

              <div class="field">
                <%= f.label :Nouveau_mot_de_passe %> <i><em>(Laissez vide si vous ne souhaitez pas le modifier)</em></i><br />
                <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Mot de passe', class: "form-control" %>
                
                <% if @minimum_password_length %>
                  <br />
                  <em>(<%= @minimum_password_length %> caractères minimum)</em>
                <% end %>
              </div>

              <div class="field">
                
                <%= f.password_field :Confirmation_du_mot_de_passe, autocomplete: "new-password", placeholder:'Confirmation du mot de passe', class: "form-control" %>
              </div>



              <br>

              <div class="actions">
                <%= button_to "Retour", :back, method: 'get', class: 'float-left btn btn-sm btn-outline-secondary' %>
                <button type="submit" class="float-right btn btn-success">Appliquer</button>
              </div>
              <br>
            <% end %>
      </div>
  </div>

  <div class="container form-group">

    <div class= "bg-light container fieldset mt-3 mr3 pt-3 fieldset col-lg-4 ">

      <h3 class="text-center">Supprimer mon compte</h3>
        <p class="border-bottom"></p>

        <p>Vous souhaitez nous quitter ? </p>
      
        <div class="actions mb-5">
          <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr ?" }, method: :delete, class: 'float-right btn btn-sm btn-danger' %>
          <%= button_to "Retour", :back, method: 'get', class: 'float-left btn btn-sm btn-outline-secondary' %>
        </div>

    </div>
  </div>

</div>   
<br>